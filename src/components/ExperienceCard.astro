---
interface Props {
  organization: string;
  role: string;
  dateRange: string;
  location: string;
  description: string;
  tags: string[];
}

const { organization, role, dateRange, location, description, tags } = Astro.props;
---

<div class="exp-card">
  <div class="exp-header">
    <div>
      <h3 class="exp-org">{organization}</h3>
      <p class="exp-role">{role}</p>
    </div>
    <div class="exp-meta">
      <span class="exp-date">{dateRange}</span>
      <span class="exp-location">{location}</span>
    </div>
  </div>
  <p class="exp-description">{description}</p>
  {tags.length > 0 && (
    <div class="exp-tags">
      {tags.map((tag) => (
        <span class="exp-tag">{tag}</span>
      ))}
    </div>
  )}
</div>

<style>
  .exp-card {
    padding: 1.5rem;
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    background-color: var(--color-bg-secondary);
    transition: border-color 0.3s, box-shadow 0.3s;
  }

  .exp-card:hover {
    border-color: var(--color-border-hover);
    box-shadow: 0 0 40px var(--color-accent-glow);
  }

  .exp-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }

  .exp-org {
    font-family: var(--font-body);
    font-size: var(--text-body);
    font-weight: 600;
    color: var(--color-accent);
    line-height: var(--leading-snug);
  }

  .exp-role {
    font-size: var(--text-small);
    color: var(--color-text-primary);
    margin-top: 0.15rem;
  }

  .exp-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    text-align: right;
    gap: 0.1rem;
    flex-shrink: 0;
  }

  .exp-date, .exp-location {
    font-size: var(--text-micro);
    color: var(--color-text-tertiary);
  }

  .exp-description {
    color: var(--color-text-secondary);
    font-size: var(--text-small);
    line-height: var(--leading-normal);
    margin-bottom: 1rem;
  }

  .exp-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .exp-tag {
    font-size: var(--text-micro);
    padding: 0.2rem 0.6rem;
    border-radius: 999px;
    border: 1px solid var(--color-border);
    color: var(--color-text-tertiary);
    background: transparent;
    transition: border-color 0.2s, color 0.2s;
  }

  .exp-card:hover .exp-tag {
    border-color: var(--color-border-hover);
  }

  @media (max-width: 600px) {
    .exp-header {
      flex-direction: column;
    }
    .exp-meta {
      align-items: flex-start;
      text-align: left;
    }
  }
</style>
