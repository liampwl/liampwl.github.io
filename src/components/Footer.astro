---
import SocialLinks from './SocialLinks.astro';
---

<footer class="footer">
  <div class="container">
    <div class="footer-inner">
      <SocialLinks size="sm" />
      <p class="footer-copy">&copy; {new Date().getFullYear()} Liam Powell</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--color-border);
    padding: 3rem 0;
  }

  .footer-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-copy {
    font-size: var(--text-micro);
    color: var(--color-text-tertiary);
  }

  @media (max-width: 600px) {
    .footer-inner {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
